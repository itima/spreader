%table.zebra-striped
  %thead
    %tr
      %th ID
      %th Name
      -# %th Actions
  %tbody
    - @accounts.each do |account|
      %tr
        %td= account.uid
        %td
          = link_to account.name, account_path(account)
        -# %td
          = link_to "Edit", edit_account_path(account)
          = link_to "Destroy", account_path(account), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
