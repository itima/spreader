    = f.number_field :max_bid
  .field
    = f.label :bid_info
    = f.text_field :bid_info
  .field
    = f.label :account_id
    = f.number_field :account_id
  .field
    = f.label :uid
    = f.text_field :uid
  .field
    = f.label :creative_ids
    = f.text_field :creative_ids
  .field
    = f.label :targeting
    = f.text_field :targeting
  .field
