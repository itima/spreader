    #error_explanation
      %h2= "#{pluralize(@creative.errors.count, "error")} prohibited this creative from being saved:"
      %ul
        - @creative.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :creative_id
    = f.text_field :creative_id
  .field
    = f.label :type
    = f.number_field :type
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :image_hash
    = f.text_field :image_hash
  .field
    = f.label :link_url
    = f.text_field :link_url
  .field
    = f.label :object_id
    = f.text_field :object_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :run_status
    = f.number_field :run_status
  .field
    = f.label :preview_url
    = f.text_field :preview_url
  .field
    = f.label :count_current_adgroups
    = f.number_field :count_current_adgroups
  .field
    = f.label :uid
    = f.text_field :uid
  .field
    = f.label :image_url
    = f.text_field :image_url
  .actions
    = f.submit 'Save'
